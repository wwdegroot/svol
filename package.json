{
    "name": "svol",
    "version": "0.0.7",
    "license": "MIT",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package",
        "package": "svelte-kit sync && svelte-package && npm run build:css && publint",
        "build:css": "npx @tailwindcss/cli -i ./src/lib/app.css -o ./dist/styles.css --minify",
        "preview": "vite preview",
        "prepublishOnly": "npm run package",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint": "prettier --check .",
        "format": "prettier --write ."
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./styles.css": "./dist/styles.css"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*",
        "src/lib",
        "!src/lib/**/*.test.*",
        "!src/lib/**/*.spec.*"
    ],
    "peerDependencies": {
        "svelte": "^5.16.0"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^7.0.1",
        "@sveltejs/kit": "^2.53.0",
        "@sveltejs/package": "^2.5.7",
        "@sveltejs/vite-plugin-svelte": "^6.2.4",
        "@tailwindcss/vite": "^4.2.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/svelte": "^5.3.1",
        "clsx": "^2.1.1",
        "install": "^0.13.0",
        "jsdom": "^28.1.0",
        "postcss": "^8.5.6",
        "prettier": "^3.8.1",
        "prettier-plugin-svelte": "^3.5.0",
        "publint": "^0.3.17",
        "svelte": "^5.53.1",
        "svelte-check": "^4.4.3",
        "tailwindcss": "^4.2.0",
        "tslib": "^2.8.1",
        "tw-animate-css": "^1.4.0",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "dependencies": {
        "ol": "^10.8.0",
        "proj4": "^2.20.2",
        "tailwind-merge": "^3.5.0",
        "tailwind-variants": "^1.0.0",
        "bits-ui": "2.4.1",
        "@lucide/svelte": "^0.513.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@sveltejs/kit",
            "@tailwindcss/oxide",
            "esbuild"
        ]
    }
}
